{
  "name": "mcp",
  "root": "mcp",
  "sourceRoot": "mcp/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/mcp",
        "main": "mcp/src/index.ts",
        "tsConfig": "mcp/tsconfig.json",
        "assets": []
      },
      "postTargets": ["mcp:post-build"]
    },
    "post-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mcp/scripts/post-build.sh"
      }
    },
    "serve": {
      "executor": "@nrwl/node:execute",
      "options": {
        "buildTarget": "mcp:build"
      }
    }
  }
}
