{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "..",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@/lib/*": ["../lib/*"],
      "@/services/*": ["../services/*"],
      "@/types/*": ["../app/types/*", "../types/*", "../shared/types/*"],
      "@mcphub/lib/*": ["../lib/*"],
      "@mcphub/services/*": ["../services/*"],
      "@mcphub/shared/*": ["../shared/*"]
    },
    "baseUrl": ".",
    "sourceMap": false,
    "declaration": false,
    "noEmitOnError": true
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts",
    "../lib/**/*.ts",
    "../services/**/*.ts",
    "../shared/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
