{
    "hosting": {
        "public": "out",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/sse/**",
                "function": "MCPSSE"
            },
            {
                "source": "/api/uploads/**",
                "function": "fileOperations"
            },
            {
                "source": "/api/uploads",
                "function": "fileOperations"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "/api/sse",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache, no-store, must-revalidate"
                    },
                    {
                        "key": "Connection",
                        "value": "keep-alive"
                    }
                ]
            },
            {
                "source": "/api/uploads/**",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache, no-store, must-revalidate"
                    }
                ]
            }
        ]
    },
    "functions": {
        "source": "functions",
        "codebase": "default",
        "runtime": "nodejs20",
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log"
        ],
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ]
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "hosting": {
            "port": 5000
        },
        "firestore": {
            "port": 8080
        },
        "storage": {
            "port": 9199
        },
        "ui": {
            "enabled": true,
            "port": 4000
        }
    },
    "storage": {
        "rules": "storage.rules"
    }
}